@model FiapSmartCity.Models.PessoaEF

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pessoa EF - Editar</title>
</head>
<body>
    <h1>Pessoa EF - Editar</h1>

    <!-- formulário HTML com Tag Helpers-->
    <form asp-action="Editar" asp-controller="PessoaEF" method="post">
        <!-- Campo oculto para guardar qual Id (chave) do registro alterado -->
        <input type="hidden" asp-for="IdPessoa" />
        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                <label>Nome</label>
                <div class="col-md-10">
                    <!-- Caixa de Texto -->
                    <input asp-for="NomePessoa" />
                </div>
            </div>

            <div class="form-group">
                <label>Endereço</label>
                <div class="checkbox">
                    <!-- CheckBox -->
                    <input asp-for="EnderecoPessoa" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="reset" value="Limpar" class="btn btn-default" />
                    <!-- HTML Simple para envio dos dados do formulário -->
                    <input type="submit" value="Gravar Alteração" class="btn btn-default" />
                </div>
            </div>
            <hr />
        </div>
    </form>

    <div>
        <a asp-controller="PessoaEF" asp-action="Index">Voltar</a>
    </div>

</body>
</html>
